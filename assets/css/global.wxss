/*基本样式*/
.sub_t{
    color: #666;
    font-size: 28rpx;
}
/* 文本溢出 */
.one {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.more {
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}