/*轮播图样式*/
.index-container .banners{
  height: 280rpx;
}
.index-container .banners image{
  width: 100%;
}

/*图标导航样式*/
.index-container .nav-container .nav-item{
  flex: 1;
}
.index-container .nav-container .nav-item text{
  margin-top: 10px;
  font-size: 26rpx;
}
.index-container .nav-container .nav-item .iconfont{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #ee9ca7;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #ffdde1, #ee9ca7);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right bottom, #ffdde1, #ee9ca7); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  font-size: 46rpx;
  color: #fff;
}
.index-container .scroll-container{
  margin-top: 20rpx;
}
.index-container .scroll-container .scroll-box{
  height: 300rpx;
  align-items: flex-start;
}
.scroll-container .scroll-item{
  margin-right: 20rpx;
  font-size: 26rpx;
}
.index-container .scroll-container .scroll-item image{
  width: 200rpx;
  height: 200rpx;
  background-color: #ccc;
  border-radius: 8rpx;
}

/* 排行榜 */
.index-container .rankList-container .swiper-container{
  margin-top: 20rpx;
  height: 550rpx;
}
.index-container .rankList-container .swiper-container .swiper-item{
  padding: 20rpx;
  box-sizing: border-box;
  width: 97%;
  border-radius: 20rpx;
  box-shadow: 0 0 16rpx rgba(0, 0, 0,0.15);
  margin: 10rpx;
}
.index-container .rankList-container .swiper-container .swiper-item image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}
.index-container .rankList-container .swiper-container .swiper-item .title{
  line-height: 100rpx;
}
.index-container .rankList-container .swiper-container .swiper-item .rank-item{
  margin-top: 20rpx;
  font-size: 26rpx;
}
.index-container .rankList-container .swiper-container .swiper-item .rank-item .order{
  width: 50rpx;
  height: 100rpx;
  flex-shrink: 0;
}
.index-container .rankList-container .swiper-container .swiper-item .rank-item .music-name{
  max-width: 300rpx;
}
.index-container .rankList-container .swiper-container .swiper-item .rank-item .music-name,
.index-container .rankList-container .swiper-container .swiper-item .rank-item .author-name{
  line-height: 100rpx;
}
.index-container .rankList-container .swiper-container .swiper-item .rank-item .author-name{
  font-size: 20rpx;
  min-width: 100rpx;
  margin-left: 20rpx;
}