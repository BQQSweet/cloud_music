/* pages/video/index.wxss */
.video-container {
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #fff;
  padding-bottom: 200rpx;
}

.content-container {
  display: flex;
  flex-direction: column;
  height: 100%
}

.video-container .content-container .videos-items {
  height: 100%;
}
.video-container .content-container .videos-items .videoinfo{
  width: 100%;
  margin-top: 20rpx;
}
.video-container .content-container .videos-items .videoinfo .creator .creator-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.video-container .content-container .videos-items .videoinfo .iconfont{
  font-size: 40rpx;
  margin-top: 20rpx;
  color: #ee9ca7;
}
 .cover-container {
  width: 100%;
  height: 100%;
  position: relative;
}
.cover-container .cover {
  width: 100%;
  height: 100%;
  background-color:rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.van-tabs__wrap--scrollable .van-tab {
  flex-basis: auto !important;
}
.badge-class{
  background: #ee9ca7!important;
}